@using AdsOnline.Models.Entities
@model List<Message>
@{
    ViewBag.Title = "InComingMessages";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<!DOCTYPE html>

<html>

<head>

    <meta charset="utf-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title></title>

    <!-- Tell the browser to be responsive to screen width -->

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <!-- Ionicons -->

    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">



    <!-- icheck bootstrap -->
    <!-- Theme style -->
    <!-- Google Font: Source Sans Pro -->

    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

</head>

<body class="hold-transition sidebar-mini">

    <!-- Navbar -->
    <!-- /.navbar -->
    <!-- Main Sidebar Container -->
    <!-- Content Wrapper. Contains page content -->
    <!-- Content Header (Page header) -->
    <div class="auto-container mb-4">
        <section class="content-header">

            <div class="container-fluid">

                <div class="row mb-2">

                    <div class="col-sm-6">

                        <h1>Mesaj Detay</h1>

                    </div>

                </div>

            </div><!-- /.container-fluid -->

        </section>

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-3">

                        <a href="/Message/InComingMessages" class="btn btn-primary btn-block mb-3">Gelen Kutusuna Geri Dön</a>

                        <div class="card">

                            <div class="card-header">

                                <h3 class="card-title">Klasörler</h3>

                                <div class="card-tools">

                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">

                                        <i class="fas fa-minus"></i>

                                    </button>

                                </div>

                            </div>

                            <div class="card-body p-0">

                                <ul class="nav nav-pills flex-column">

                                    <li class="nav-item active">

                                        <a href="/Message/InComingMessages" class="nav-link">

                                            <i class="fas fa-inbox"></i> Gelen Kutusu

                                            <span class="badge bg-warning float-right">@ViewBag.numberOfIncomingMessages</span>

                                        </a>

                                    </li>

                                    <li class="nav-item">

                                        <a href="/Message/SentMessages" class="nav-link">

                                            <i class="far fa-envelope"></i> Gönderilen Mesajlar
                                            <span class="badge bg-default float-right">@ViewBag.numberOfSentMessages</span>

                                        </a>

                                    </li>

                                    <li class="nav-item">

                                        <a href="#" class="nav-link">

                                            <i class="far fa-file-alt"></i> Taslaklar

                                        </a>

                                    </li>

                                    <li class="nav-item">

                                        <a href="#" class="nav-link">

                                            <i class="fas fa-filter"></i> Gereksiz Mesajlar

                                            <span class="badge bg-warning float-right">2</span>

                                        </a>

                                    </li>

                                    <li class="nav-item">

                                        <a href="#" class="nav-link">

                                            <i class="far fa-trash-alt"></i> Çöp Kutusu
                                            <span class="badge bg-default float-right">3</span>

                                        </a>

                                    </li>

                                </ul>

                            </div>

                            <!-- /.card-body -->

                        </div>

                        <!-- /.card -->

                        <div class="card">

                            <div class="card-header">

                                <h3 class="card-title">Filtreler</h3>

                                <div class="card-tools">

                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">

                                        <i class="fas fa-minus"></i>

                                    </button>

                                </div>

                            </div>

                            <div class="card-body p-0">

                                <ul class="nav nav-pills flex-column">

                                    <li class="nav-item">

                                        <a href="#" class="nav-link">

                                            <i class="far fa-circle text-danger"></i>

                                            Önemliler

                                        </a>

                                    </li>

                                    <li class="nav-item">

                                        <a href="#" class="nav-link">

                                            <i class="far fa-circle text-warning"></i> Promosyonlar

                                        </a>

                                    </li>

                                    <li class="nav-item">

                                        <a href="#" class="nav-link">

                                            <i class="far fa-circle text-primary"></i>

                                            Sosyal Medya Mesajları

                                        </a>

                                    </li>

                                </ul>

                            </div>

                            <!-- /.card-body -->

                        </div>

                        <!-- /.card -->

                    </div>
                    <!-- /.col -->
                    @foreach (var messageDetail in Model)
                    {


                    <div class="col-md-9">
                        <div class="card card-primary card-outline">
                            <div class="card-header">
                                <h3 class="card-title">Mesaj Oku</h3>

                              
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body p-3">
                                <div class="mailbox-read-info">
                                    <h5>Konu: @messageDetail.Subject</h5>
                                    <h6>
                                        Gönderen: @messageDetail.Sender
                                        <span class="mailbox-read-time float-right">@messageDetail.MessageDate</span>
                                    </h6>
                                </div>
                                <hr />
                                <div class="mailbox-read-message">
                                    <p>Merhaba,</p>

                                    <p>
                                       @messageDetail.Content
                                    </p>

                                   

                                    
                                </div>
                                <!-- /.mailbox-read-message -->
                            </div>
                            <!-- /.card-body -->
                           
                           
                        </div>
                        <!-- /.card -->
                    </div>
                    }
                    <!-- /.col -->
                </div>
                <!-- /.row -->
        </section>
        <!-- /.content -->
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->

      
    </div>
  
</body>

</html>


