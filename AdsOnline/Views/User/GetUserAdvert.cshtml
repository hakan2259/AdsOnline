@using AdsOnline.Models.Entities
@model List<Advert>
@{
    ViewBag.Title = "GetUserAdvert";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<section class="news-section sec-pad-2">
    

    <div class="auto-container">
        <div class="row clearfix">
            @foreach (var advert in Model)
            {

                <div class="col-lg-4 col-md-6 col-sm-12 news-block">
                    <div class="news-block-one wow fadeInUp animated animated" data-wow-delay="00ms" data-wow-duration="1500ms">
                        <div class="inner-box">
                            <figure class="image-box">
                                <img src="@advert.Image" alt="" style="width:370px; height:auto">
                                <a href="/User/GetAdvert/@advert.Id"><i class="fas fa-link"></i></a>
                            </figure>
                            <div class="lower-content">
                               
                                <span class="category">@advert.Category.Name</span>
                                <h3><a href="/User/GetAdvert/@advert.Id">@advert.Title</a></h3>

                                <span class="post-info">By <a href="blog-details.html">@ViewBag.userFirstName</a> - @advert.AdvertDate</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
            </div>
    </div>
   
</section>
<!-- news-section end -->
