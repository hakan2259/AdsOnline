@model AdsOnline.Models.Entities.User
@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}
<div class="auto-container">
    <div class="row mt-3">
        <div class="col-lg-4 text-center">
            <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460__340.png" style="width:250px; height:auto;" />

            <h2 class="fw-normal mt-3">@Model.FirstName @Model.LastName</h2>
            <p class="mt-3">@HttpContext.Current.User.Identity.Name</p>

        </div><!-- /.col-lg-4 -->
        <div class="col-lg-8">
            @using (Html.BeginForm("UpdateProfile", "User", FormMethod.Post))
            {

                <div class="row mt-3">
                    <div class="col-md-6"><label class="labels">İsim</label>@Html.TextBoxFor(x => x.FirstName,new {@class="form-control" })</div>
                    <div class="col-md-6"><label class="labels">Soyisim</label>@Html.TextBoxFor(x => x.LastName, new { @class="form-control"})</div>
                </div>
                <div class="row mt-3 mb-5">
                    <div class="col-md-12"><label class="labels">Telefon Numarası</label>@Html.TextBoxFor(x => x.Phone,new { @class="form-control mb-2"})</div>
                    <div class="col-md-12"><label class="labels">Adres</label>@Html.TextBoxFor(x => x.Address, new { @class = "form-control mb-2" })</div>
    
                    <div class="col-md-12"><label class="labels">Email</label>@Html.TextBoxFor(x => x.Email, new { @class = "form-control mb-2" })</div>
                    <div class="col-md-12"><label class="labels">Parola</label>@Html.TextBoxFor(x => x.Password,new { @class="form-control"})</div>
                </div>
                <button class="btn btn-warning">Bilgilerimi Güncelle</button>
            }
        </div><!-- /.col-lg-4 -->

    </div>
</div>
<br />

