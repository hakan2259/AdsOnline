@using AdsOnline.Models.Entities
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-4">
    <div class="card-header" style="display:flex; justify-content:space-between; align-items:center">
        <i class="fas fa-table me-1"></i>
        <span style="font-weight:bold;">Kategoriler</span>
        <a href="/Category/CreateCategory" class="btn btn-primary">Yeni Kategori</a>
    </div>
    
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Kategori Adı</th>
                    <th>Kategori Açıklaması</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
              
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td><a href="/Category/DeleteCategory/@category.Id" class="btn btn-danger">Sil</a></td>
                        <td><a href="/Category/GetCategory/@category.Id" class="btn btn-success">Güncelle</a></td>
                    </tr>

                }

            </tbody>
        </table>
    </div>
</div>


